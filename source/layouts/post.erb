<% wrap_layout :layout do %>
<div class="container blog-post blog-container">
  <div class="row">
    <div class="col-md-9">

      <% if content_for?(:banner) %>
    <div class="post-banner">
      <%= yield_content :banner %>
    </div>
  <% end %>

      <main id="main" role="main" class="blog-post-main-container">
      <%= yield %>
      </main>
    </div>
  </div>
</div>
<% end %>
