<div class="post-summary">
  <% link_to article, :class => 'post-link' do %>
    <figure class="post-summary-image">
      <img src= "<%= article.data["summary_image"] %>" alt="<%= article.title %>" />
    </figure>
  <% end %>
  <div class="blog-details">
    <% link_to article, :class => 'post-link' do %>
      <span class="post-date"><%= article.date.strftime('%b %e, %Y') %></span>
      <h2 class="post-title"><%= (article.title) %></h2>
      <p class="excerpt"><%= article.data["excerpt"] %> </p>
    <% end %>
  </div>
</div>